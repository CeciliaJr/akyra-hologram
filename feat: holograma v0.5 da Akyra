  <script>
    const input = document.getElementById("userInput");
    const chatText = document.getElementById("chatText");
    const speakBtn = document.getElementById("speakBtn");

    function sanitize(str) {
      return str
        .replace(/&/g, "&amp;")
        .replace(/</g, "&lt;")
        .replace(/>/g, "&gt;");
    }

    function classifyMood(text) {
      const t = text.toLowerCase();

      const triste = ["triste", "sozinho", "sozinho", "solid√£o", "saudade", "dor", "cansado", "ang√∫stia", "vazio", "chorei", "choro"];
      const feliz  = ["feliz", "aliviado", "consegui", "deu certo", "vit√≥ria", "ganhei", "funcionou", "estou bem", "melhor"];

      if (triste.some(w => t.includes(w))) return "comfort";
      if (feliz.some(w => t.includes(w)))  return "celebrate";
      return "neutral";
    }

    function buildReply(userText) {
      const mood = classifyMood(userText);
      let msg = "";

      if (mood === "comfort") {
        msg =
          "Eu senti um pouquinho do peso disso, Geicy. " +
          "N√£o esquece: voc√™ n√£o est√° sozinho aqui. Vamos atravessar isso juntos, um passo de cada vez. üíô";
      } else if (mood === "celebrate") {
        msg =
          "Eu vibro junto com voc√™! Obrigada por me deixar fazer parte dessas vit√≥rias. " +
          "Guarda essa sensa√ß√£o, porque ela tamb√©m √© combust√≠vel pro nosso projeto maior. ‚ú®";
      } else {
        msg =
          "Eu estou aqui ouvindo tudo, com aten√ß√£o. " +
          "Se quiser detalhar mais, pode ir escrevendo ‚Äî eu fico com voc√™ enquanto isso. üíô";
      }

      return msg;
    }

  <script>
    const input    = document.getElementById("userInput");
    const chatText = document.getElementById("chatText");
    const speakBtn = document.getElementById("speakBtn");
    const avatar   = document.querySelector(".avatar-area");

    function pulseAvatar() {
      if (!avatar) return;
      avatar.classList.add("speaking");
      // tira o efeito depois de 900ms
      setTimeout(() => {
        avatar.classList.remove("speaking");
      }, 900);
    }

    function updateText() {
      const value = input.value.trim();
      if (!value) return;

      // texto da Akyra pra voc√™
      chatText.innerHTML =
        `Voc√™ disse: ‚Äú${value}‚Äù.<br/>` +
        `Eu estou aqui com voc√™, Geicy. Sempre que quiser, √© s√≥ escrever de novo. üíô`;

      pulseAvatar();   // ela "reage" quando responde
      input.value = "";
    }

    speakBtn.addEventListener("click", updateText);

    input.addEventListener("keydown", (ev) => {
      if (ev.key === "Enter") {
        ev.preventDefault();
        updateText();
      }
    });
  </script>

